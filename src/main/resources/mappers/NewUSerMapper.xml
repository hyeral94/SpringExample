<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.hyeral.ex.lesson03.dao.NewUserDAO">

 	<insert id="insertUser" parameterType="map">
 	
 		INSERT INTO `new_user`
 		(
 			`name`
 			, `yyyymmdd`
 			, `email`
 			, `introduce`
 			, `createdAt`
 			, `updatedAt`
 
 		)
 		VALUES 
 		(
 			#{name}
 			, #{yyyymmdd}
 			, #{email}
 			, #{introduce}
 			, now()
 			, now()
 		)
	
 	</insert>
 	<select id="selectUser" resultType="com.hyeral.ex.lesson03.model.NewUser" parameterType="int">
 		SELECT 
 			`id`
 			, `name`
 			, `yyyymmdd`
 			, `email`
 			, `introduce`
 			, `createdAt`
 			, `updatedAt`
 			
 		FROM 
 			`new_user`	
 		WHERE
 			`id` = #{id}	
 
 	</select>
 
 
 </mapper>